[Unit]
Description=Network Watchdog that reboots system when network goes down and then returns
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
EnvironmentFile=-/etc/default/net-watchdog
ExecStart=/opt/net-watchdog/watchdog.sh
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
